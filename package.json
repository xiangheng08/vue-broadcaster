    "unplugin-dts": "1.0.0-beta.6",
    "vite": "^7.0.6",
    "vite-plugin-vue-devtools": "^8.0.0",
    "vitest": "^3.2.4",
    "vue": "^3.5.21",
    "vue-tsc": "^3.0.4"
